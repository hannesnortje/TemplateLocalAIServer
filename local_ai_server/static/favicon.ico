import os
import base64
from pathlib import Path

# Create static directory if it doesn't exist
static_dir = Path(__file__).parent
static_dir.mkdir(exist_ok=True)

# Base64 encoded favicon data
favicon_data = b'AAABAAEAEBAAAAEAIABoBAAAFgAAACgAAAAQAAAAIAAAAAEAIAAAAAAAAAQAABMLAAATCwAAAAAAAAAAAAD///8A////AP///8A'  # ...existing base64 data...

# Write favicon to static directory
favicon_path = static_dir / 'favicon.ico'
with open(favicon_path, 'wb') as f:
    f.write(base64.b64decode(favicon_data))
